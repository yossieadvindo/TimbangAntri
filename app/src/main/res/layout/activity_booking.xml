<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookingmenu"
    android:orientation="vertical"
    tools:context=".Pesan">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="78dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/left" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:hint="nama"
                    android:textColorHint="@android:color/darker_gray"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:hint="contact"
                    android:textColorHint="@android:color/darker_gray"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/spin_jenMotor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:padding="20dp"
                    android:spinnerMode="dialog" />

                <EditText
                    android:id="@+id/platno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:hint="nomor plat"
                    android:textColorHint="@android:color/darker_gray"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/jarakTempuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:ems="10"
                    android:hint="Jarak Tempuh"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/txtKrgBk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:textColor="#00E22929"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btnPesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="30dp"
                    android:text="Lanjut" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!--    <EditText-->
    <!--        android:id="@+id/nama"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_margin="20dp"-->
    <!--        android:ems="10"-->
    <!--        android:hint="nama"-->
    <!--        android:textColorHint="@android:color/darker_gray"-->
    <!--        android:visibility="visible" />-->

</LinearLayout>